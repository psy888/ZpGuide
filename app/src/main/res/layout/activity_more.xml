<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bigImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/bigSightName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:paddingLeft="8dp"
            android:textSize="32sp"
            tools:text="Hello World" />

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="HHHHHHHHHHHHHHddddddddddddddddddddeeeeeeeeeeeeeeeeeeaaaaaaaaaaerfdsfadgfldjgvmflckgmvfclkgmvfkcgmvefkcgmvf;v" />

        <TextView
            android:id="@+id/bigPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="8(061)225 55 55" />

        <TextView
            android:id="@+id/bigAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="г.Запорожье пр-т. Соборный, 142" />

    </LinearLayout>
</ScrollView>